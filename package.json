{
    "name": "vscode-nim-lsp",
    "displayName": "vscode-nim-lsp",
    "description": "",
    "version": "0.0.26",
    "publisher": "bung87",
    "engines": {
        "vscode": "^1.45.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bung87/vscode-nim-extension"
    },
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "format": "prettier --print-width 100 --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma all",
        "lint": "eslint --fix",
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "tsc-watch": "tsc -watch -p ./",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": "^18.15.3",
        "@types/vscode": "^1.45.1",
        "@types/which": "^2.0.2",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "@vscode/vsce": "^2.18.0",
        "esbuild": "^0.20.1",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.7.0",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0",
        "which": "^3.0.0"
    },
    "activationEvents": [
        "onCommand:nim.build",
        "onCommand:nim.run",
        "onCommand:nim.runTest"
    ],
    "contributes": {
        "languages": [
            {
                "id": "nim",
                "aliases": [
                    "Nim",
                    "nim"
                ],
                "extensions": [
                    ".nim"
                ],
                "configuration": "./nimcfg.json"
            },
            {
                "id": "nims",
                "aliases": [],
                "extensions": [
                    ".nims"
                ],
                "configuration": "./nimcfg.json"
            },
            {
                "id": "nimble",
                "aliases": [
                    "Nimble",
                    "nimble"
                ],
                "extensions": [
                    ".nimble"
                ],
                "configuration": "./nimcfg.json"
            }
        ],
        "grammars": [
            {
                "language": "nim",
                "scopeName": "source.nim",
                "path": "./syntaxes/nim.json"
            },
            {
                "language": "nims",
                "scopeName": "source.nim",
                "path": "./syntaxes/nim.json"
            },
            {
                "language": "nimble",
                "scopeName": "source.nimble",
                "path": "./syntaxes/nimble.json"
            }
        ],
        "commands": [
            {
                "command": "nim.run.file",
                "title": "Nim: Run selected file"
            },
            {
                "command": "nim.check.file",
                "title": "Nim: Check selected file"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId == 'nim'",
                    "command": "nim.run.file",
                    "group": "run@1"
                }
            ]
        },
        "keybindings": [
            {
                "key": "F6",
                "command": "nim.run.file",
                "when": "editorLangId == 'nim'"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Nim configuration",
            "properties": {
                "nim.nimsuggest": {
                    "type": "string",
                    "default": "",
                    "scope": "resource",
                    "description": "nimsuggest bin path"
                },
                "nim.nimlsp": {
                    "type": "string",
                    "default": "",
                    "scope": "resource",
                    "description": "nimlsp bin path"
                },
                "nim.buildOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Execute build task from tasks.json file on save."
                },
                "nim.buildCommand": {
                    "type": "string",
                    "default": "c",
                    "description": "Nim build command (c, cpp, doc, etc)"
                },
                "nim.runOutputDirectory": {
                    "type": "string",
                    "default": "",
                    "description": "Output directory for run selected file command. The directory is relative to the workspace root."
                },
                "nim.lintOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Check code by using 'nim check' on save."
                },
                "nim.logNimsuggest": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable verbose logging of nimsuggest to use profile directory."
                },
                "nim.licenseString": {
                    "type": "string",
                    "default": "",
                    "description": "Optional license text that will be inserted on nim file creation."
                }
            }
        },
        "snippets": [
            {
                "language": "nim",
                "path": "./snippets/nim.json"
            }
        ]
    }
}
